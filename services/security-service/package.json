{
  "name": "echopay-security-service",
  "version": "1.0.0",
  "description": "EchoPay Security Hardening and Intrusion Detection Service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:security": "npm run test:penetration && npm run test:vulnerability",
    "test:penetration": "node src/tests/penetration-tests.js",
    "test:vulnerability": "node src/tests/vulnerability-assessment.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "crypto": "^1.0.1",
    "rate-limiter-flexible": "^3.0.8",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "owasp-password-strength-test": "^1.3.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "nmap": "^2.0.2",
    "sqlmap": "^1.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}